<%= simple_form_for(@rated_talent) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.input :talent_id, collection: Talent.all %>
    <%= f.input :rating_value, as: :radio_buttons, collection: RatedTalent.rating_values.keys.to_a %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
