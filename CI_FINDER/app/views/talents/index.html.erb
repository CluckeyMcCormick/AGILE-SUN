    <!-- This is the code for the display table -->
    <h1>Listing Talents</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Talent type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @talents.each do |talent| %>
          <tr>
            <td><%= talent.name %></td>
            <td><%= talent.talent_type %></td>
            <td><%= link_to 'Show', talent %></td>
            <td><%= link_to 'Edit', edit_talent_path(talent) %></td>
            <td><%= link_to 'Destroy', talent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
